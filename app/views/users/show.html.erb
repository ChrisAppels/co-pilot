<center><h2><%= @user.first_name %> <%= @user.last_name %></h2></center>
<ul>
<ul class="list-group ">
  <li class="list-group-item"><b>Addres:</b> <%= @user.address %></li>
  <li class="list-group-item"><b>Email:</b> <%= @user.email %></li>
  <li class="list-group-item"><b>Phone number:</b> <%= @user.phone %></li>
</ul>


<center><h2>Bookings</h2></center>
<% @bookings.each do |booking| %>
<ul class="list-group ">
  <li class="list-group-item"><b>Start date:</b> <%= booking.start_date %></li>
  <li class="list-group-item"><b>End date:</b> <%= booking.end_date %></li>
  <li class="list-group-item"><b>Plane:</b> <%= booking.plane.model %></li>
</ul>
<% end %>



<p><%=link_to"Go Home", root_path %> <%=link_to"Add a Plane", new_plane_path %></p>
