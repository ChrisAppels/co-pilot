<div id="wrapper" style="text-align: center">
<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs form-group align-center" >
    <div class="form-group row">
    <%= f.label :email %>
    <%= f.text_field :email, required: true, autofocus: true %>
    </div>
    <br>
    <div class="form-group row">
    <%= f.label :password %>
    <%= f.text_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    </div>
    <br>
    <div class="form-group row">
    <%= f.label :password_confirmation %>
    <%= f.text_field :password_confirmation, required: true %>
    </div>
    <br>
    <div class="form-group row">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
    </div>
    <br>
    <div class="form-group row">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
    </div>
    <br>
    <div class="form-group row">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
    </div>
    <br>
    <div class="form-group row">
    <%= f.label :address %>
    <%= f.text_field :address %>
    </div>
    </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>
</div>

<%= render "devise/shared/links" %>
