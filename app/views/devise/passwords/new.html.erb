<h2 class="text-center">Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="unstyled text-center"><%= f.error_notification %></div>

  <div class="form-inputs col-sm-4 col-md-offset-4">
    <%= f.input :email, required: true, autofocus: true %>
  </div>

  <div class="text-center margin-bot form-actions col-sm-4 col-md-offset-4">
    <%= f.button :submit, "Send me reset password instructions", :class => 'btn-primary' %>
  </div>
<% end %>
<br>
<div class="text-center col-sm-4 col-md-offset-4"><%= render "devise/shared/links" %></div>
