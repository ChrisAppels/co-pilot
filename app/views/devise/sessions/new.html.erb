<h2 class="text-center">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs col-sm-4 col-md-offset-4">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="text-center margin-bot form-actions col-sm-4 col-md-offset-4">
    <%= f.button :submit, "Log in", :class => "btn-primary" %>
  </div>
<% end %>
<br>
<div class="text-center col-sm-4 col-md-offset-4"><%= render "devise/shared/links" %></div>
